{
  "name": "final-project",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm --workspace @lms/core run build && npm --workspace @lms/auth run build && npm --workspace @lms/events run build && npm --workspace @lms/api run build",
    "build:apps": "npm --workspace apps/web run build",
    "test": "npm --workspace apps/api test",
    "prisma:generate": "npm --workspace apps/api run prisma:generate",
    "prisma:migrate": "npm --workspace apps/api run prisma:migrate",
    "prisma:studio": "npm --workspace apps/api run prisma:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
